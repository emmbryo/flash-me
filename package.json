{
  "name": "flash-me",
  "version": "1.0.0",
  "description": "module for managing flashcards, with focus on language learning",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --inspect -r dotenv/config src/server.js",
    "lint": "npx eslint ./src || exit 0",
    "lint:fix": "npx eslint ./src --fix || exit 0",
    "test": "npx --node-options=--experimental-vm-modules jest --verbose --coverage --all || exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmbryo/flash-me.git"
  },
  "keywords": [
    "flashcards",
    "language",
    "learning"
  ],
  "author": "emmbryo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emmbryo/flash-me/issues"
  },
  "homepage": "https://github.com/emmbryo/flash-me#readme",
  "dependencies": {
    "ejs": "^3.1.6",
    "express": "^4.17.2",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.17.3",
    "helmet": "^5.1.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "jest": "^29.6.4",
    "jest-chain": "^1.1.6",
    "jest-extended": "^4.0.1",
    "nodemon": "^2.0.15"
  }
}
