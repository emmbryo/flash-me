<script type="module" src="./js/cards.js"></script>

<h1>The saved card</h1>

<div id="flashcard-container">
    <div class="flashcards" id="flashcard-solo">
      <div class="front">
        <div class="card-top-row">
          <h2 class="word-translation"><b> <%= viewData.front?.translation %> </b></h2>
          <div class="edit-delete-buttons">
            <form action="./flashcards/<%= viewData.id %>/delete" method="post" >
              <button class="delete-card" id="<%= viewData.id %>" type="submit">Delete</button>
            </form>
          </div>
        </div>
        <p> <%= viewData.front?.gapSentence %></p>
      </div>
      <div class="back hidden">
        <div class="card-top-row">
          <h2 class="word-learn"><b> <%= viewData.back?.word %> </b></h2>
          <div class="edit-delete-buttons">
            <form action="./flashcards/<%= viewData.id %>/delete" method="post" >
              <button class="delete-card" id="<%= viewData.id %>" type="submit">Delete</button>
            </form>
          </div>
        </div>
        <p><%= viewData.back?.pronunciation %></p>
        <p><%= viewData.back?.sentence %></p>
      </div>
      <div>
        <button class="flip-flashcards" id="flash-<%= viewData.id %>">Flash!</button>
      </div>
    </div>
</div>